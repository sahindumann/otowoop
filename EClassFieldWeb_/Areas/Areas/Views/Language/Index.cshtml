@model EClassField.Core.Domain.Locazition.Language
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Areas/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">


        <div class="panel panel-default">
            <div class="panel-heading ui-draggable-handle">
                <h3 class="panel-title">Diller</h3>
                <ul class="panel-controls">
                    <li>
                        <a href="/Panel/Language/Index/?Id=0"><i class="fa fa-plus"></i></a>
                    </li>
                </ul>
            </div>
            <form class="form-horizontal" method="post">
                <div class="panel-body">

                    @Html.HiddenFor(d=>d.Id)
                    <div class="form-group">
                        <label class="control-label col-md-4">Dil Adı</label>
                        <div class="col-md-8 ">

                            @Html.TextBoxFor(d => d.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Seo Adı</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(d => d.SeoName, new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">İcon</label>
                        <div class="col-md-8">

                            @Html.TextBoxFor(d => d.Icon, new { @class = "form-control", onclick = "return openCustomRoxy2()", id = "flagimage" })
                        </div>
                    </div>

                    <div class="col-md-12">


                    </div>

                    <table class="table table-striped">
                        <tr>
                            <th>
                                Dil Adı
                            </th>
                            <th>
                                Dil Seo Name
                            </th>
                            <th>
                                Dil icon
                            </th>
                            <th></th>
                        </tr>
                        <tbody>
                            @foreach (var item in (List<EClassField.Core.Domain.Locazition.Language>)ViewBag.languages)
                            {
                                <tr>
                                    <td> @item.Name</td>
                                    <td>@item.SeoName</td>
                                    <td><img src="@item.Icon" width="36" height="24" /> </td>
                                    <td><a href="/Panel/Language/Index/?Id=@item.Id" class="btn btn-default"><i class="fa fa-pencil"></i></a>
                                        <a href="/Panel/Language/Delete/?Id=@item.Id" class="btn btn-danger"><i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                                
                            }
                        </tbody>
                    </table>
                </div>

                <div class="panel-footer">
                    <button class="btn btn-primary pull-right">Kaydet</button>
                </div>
            </form>
        </div>










    </div>



</div>




<script src="/Content/tinymce_4.5.2_dev/tinymce/js/tinymce/plugins/fileman/js/custom.js"></script>

<div id="roxyCustomPanel2" style="display: none;">
    <iframe src="/Content/tinymce_4.5.2_dev/tinymce/js/tinymce/plugins/fileman/index.html?integration=custom&type=image&imageID=flagimage" style="width:100%;height:100%" frameborder="0"></iframe>
</div>

<script>
    function openCustomRoxy2() {
        $(function () {
            $('#roxyCustomPanel2').dialog({ modal: true, width: 875, height: 600, title: 'Dosya Yöneticisi' });
        });

        return false;
    }
    function closeCustomRoxy2() {
        $('#roxyCustomPanel2').dialog('close');
        return false;
    }
</script>

