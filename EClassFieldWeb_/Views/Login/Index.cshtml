
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Theme_CarSpot.cshtml";
}

<div class="page-header-area-2 gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="small-breadcrumb">
                    <div class="breadcrumb-link">
                        <ul>
                            <li>
                                <a href="../index.html">
                                    Home
                                </a>
                            </li>
                            <li class="active">
                                <a href="javascript:void(0);" class="active">
                                    Giriş Yap 
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="header-page">
                        <h1>      Giriş Yap </h1>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="vc_row wpb_row vc_row-fluid">
    <div class="wpb_column vc_column_container vc_col-sm-12">
        <div class="vc_column-inner ">
            <div class="wpb_wrapper">
                <div class="main-content-area clearfix ">
                    <section class="section-padding no-top gray">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                                    <div class="form-grid">
                                        @*<a class="btn btn-lg btn-block btn-social btn-facebook" id="btnloginface"><span class="fa fa-facebook"></span>Facebook ile giriş yap</a>*@
                                        @*<a class="btn btn-block btn-social btn-google" onclick="hello('google').login({scope : 'email'})">
                                            <span class="fa fa-google"></span>Google ile Giriş Yap
                                        </a>*@
                                        @*<h2 class="no-span"><b>veya</b></h2>*@
                                        <form id="sb-login-form">
                                            @Html.AntiForgeryToken()
                                            <div class="form-group">
                                                <label>Email Adresi</label>
                                                <input placeholder="Email Adresiniz" class="form-control" type="email" data-parsley-type="email" data-parsley-required="true" data-parsley-error-message="Email Adresinizi Girmediniz" data-parsley-trigger="change" name="email" id="email" />
                                            </div>
                                            <div class="form-group">
                                                <label>Şifre</label>
                                                <input placeholder="Şifreniz" class="form-control" type="password" data-parsley-required="true" data-parsley-error-message="Şifre Girmediniz" name="sifre" id="sifre" />
                                            </div>
                                            <div class="form-group">
                                                <div class="row">
                                                    <div class="col-xs-12 col-sm-7">
                                                        <div class="skin-minimal">
                                                            <ul class="list">
                                                                <li>
                                                                    <input type="checkbox" name="is_remember" id="is_remember" />
                                                                    <label for="is_remember">Beni Hatırla</label>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-12 col-sm-5 text-right">
                                                        <p class="help-block">
                                                            <a data-target="#myModal" data-toggle="modal">Şifremi Unuttum?</a>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>

                                            <button class="btn btn-theme btn-lg btn-block" type="submit" id="sb_login_submit">Login</button>
                                            <button class="btn btn-theme btn-lg btn-block no-display" type="button" id="sb_login_msg">İşleniyor...</button>
                                            <button class="btn btn-theme btn-lg btn-block no-display" type="button" id="sb_login_redirect">Yönlendiriliyor...</button>
                                            <br />
                                            <p class="text-center">
                                                <a href="/Signup">Kaydol</a>
                                            </p>
                                            <input type="hidden" id="nonce" value="1503741335" />
                                            <input type="hidden" id="get_action" value="login" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <!-- Main Content Area End -->
                <!-- Forget Password -->
                <div class="custom-modal">
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header rte">
                                    <h2 class="modal-title">Şifremi Unuttum ?</h2>
                                </div>

                                <form id="sb-forgot-form">
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input placeholder="Email Adresiniz" class="form-control" type="email" data-parsley-type="email" data-parsley-required="true" data-parsley-error-message="Email Adresinizi Girmediniz" data-parsley-trigger="change" name="email" id="email" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-theme" type="submit" id="sb_forgot_submit">Şifremi Sıfırla</button>
                                        <button class="btn btn-theme" type="button" id="sb_forgot_msg">İşleniyor...</button>

                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


