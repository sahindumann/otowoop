
@{
    ViewBag.Title = "CeptenOnay";
    Layout = "~/Views/Shared/_Layout_Theme_CarSpot.cshtml";
}



<div class="vc_row wpb_row vc_row-fluid">
    <div class="wpb_column vc_column_container vc_col-sm-12">
        <div class="vc_column-inner ">
            <div class="wpb_wrapper">
                <div class="main-content-area clearfix ">
                    <section class="section-padding no-top gray">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                                    <div class="form-grid">
                                        <br />
                                        <br />

                                        <form method="post" action="/Signup/CeptenOnay">
                                            @Html.AntiForgeryToken()

                                            <input type="hidden" name="userID" value="@(Request.QueryString["userID"].ToString())" />
                                            <div class="form-group">
                                                <h3>Cep telefonunuza gönderilen şifreyi giriniz</h3>
                                                <br />
                                                <input placeholder="Cepten Onay" class="form-control" type="text"   name="pass" id="ceptenonay" />
                                            </div>
                                      
                                           

                                            <button class="btn btn-theme btn-lg btn-block" type="submit">Üyeliğimi Onayla</button>
                                            <button class="btn btn-theme btn-lg btn-block no-display" type="button" id="sb_login_msg">İşleniyor...</button>
                                            <button class="btn btn-theme btn-lg btn-block no-display" type="button" id="sb_login_redirect">Yönlendiriliyor...</button>
                                            <br />
                                     
                                            <input type="hidden" id="nonce" value="1503741335" />
                                            <input type="hidden" id="get_action" value="login" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <!-- Main Content Area End -->
                <!-- Forget Password -->
                <div class="custom-modal">
                    <div id="myModal" class="modal fade" role="dialog">
                        <div class="modal-dialog">
                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header rte">
                                    <h2 class="modal-title">Şifremi Unuttum ?</h2>
                                </div>

                                <form id="sb-forgot-form">
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input placeholder="Email Adresiniz" class="form-control" type="email" data-parsley-type="email" data-parsley-required="true" data-parsley-error-message="Email Adresinizi Girmediniz" data-parsley-trigger="change" name="email" id="email" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-theme" type="submit" id="sb_forgot_submit">Şifremi Sıfırla</button>
                                        <button class="btn btn-theme" type="button" id="sb_forgot_msg">İşleniyor...</button>

                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>