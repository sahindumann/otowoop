
@model  IEnumerable<EClassFieldWeb_.Models.ViewModel.PostViewModel>


@{
    ViewBag.Title = ViewBag.Title;
    Layout = "~/Views/Shared/_Layout_Theme_CarSpot.cshtml";


    List<EClassFieldWeb_.Models.ViewModel.PostViewModel> lastposts = ViewBag.lastposts;

    List<Input> categories = ViewBag.categories;


}

@if (Model != null)
{


    <div class="page-header-area-2 gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="">
                        <div class="catpath">
                            <ul>
                                <li>
                                    <a href="/">
                                        Anasayfa
                                    </a>
                                </li>
                                @if (ViewBag.BreadCrumbs.Count > 0)
                                {
                                    foreach (EClassFieldWeb_.Models.Input item in ViewBag.BreadCrumbs)
                                    {

                                        <li class="active">
                                            <a href="/Kategori/@EClassFieldWeb_.Models.Function.getCategoriesPathString(Convert.ToInt32(item.Value), "-").Replace(".", "-")" class="active">
                                                @item.Text
                                            </a>
                                        </li>
                                    }

                                }

                            </ul>
                        </div>
                        @*<div class="header-page">
                <h1>Search</h1>
            </div>*@

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="vc_row wpb_row vc_row-fluid">
        <div class="wpb_column vc_column_container vc_col-sm-12">
            <div class="vc_column-inner ">
                <div class="wpb_wrapper">
                    <section class="custom-padding reviews  gray no-top">
                        <!-- Main Container -->
                        <div class="container">
                            <div class="row">



                                <div class="col-md-3">
                                    
                                    @Html.Partial("~/Views/Partial/_categoryPartial.cshtml")
                                   
                                </div>

                                <div class="col-md-9 col-xs-12 col-sm-12 news" style="margin-top:-50px">
                                

                                        @foreach (var item in Model)
                                        {
                                            <div class="col-md-4 col-sm-6 col-xs-12">
                                                <div class="mainimage">
                                                    <span class="badge text-uppercase badge-overlay badge-tech"><a href="http://carspot.scriptsbundle.com/reviews_cats/road-test/">Yeni Otomobil </a></span>
                                                    <a href="/blog/detay/@item.Title.Replace(" ", "-").Replace(".", "")/@item.Id">
                                                        <img class="img-responsive" alt="2017 Mercedes-Benz E-Class Coupe review" style="height:168px;" src="@item.Pictures.FirstOrDefault().Value">
                                                        <div class="overlay small-font">
                                                            <h2>@item.Title</h2>
                                                        </div>
                                                    </a>
                                                    <div class="clearfix"></div>
                                                </div>
                                            </div>
                                        }



                               
                                    <div class="cleaxfix"></div>

                                </div>



                              
                                


                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h3>Aradığınız sayfa kaldırılmış olabilir</h3>
}